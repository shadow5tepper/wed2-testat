<form action="/create" method="post">
    <div class="attribute">
        <label for="title">Title</label>
        <input id="title" type="text" name="title" required autofocus>
    </div>
    <div class="attribute">
        <label for="description">Description</label>
        <input id="description" type="text" name="description">
    </div>
    <div class="attribute">
        <label for="duedate">Due by</label>
        <input id="duedate" name="duedate" type="date">
    </div>
    <div class="attribute">
        <label for="importance">Importance</label>
        <input id="importance" type="number" name="importance" min="1" max="5">
    </div>
    <div class="attribute">
        <label><input id="finished" name="finished" type="checkbox">Finished</label>
    </div>
    <button type="submit">save</button>
</form>
<form action="/" method="get">
    <button type="submit">cancel</button>
</form>