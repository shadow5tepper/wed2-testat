<form action="/edit/{{item._id}}" method="post">
    <div class="attribute"></div>
        <label for="title">Title</label>
        <input id="title" type="text" name="title" value="{{item.title}}" required><div class="attribute">
    </div>
    <div class="attribute"></div>
        <label for="description">Description</label>
        <input id="description" name="description" type="text" value="{{item.description}}">
    </div>
    <div class="attribute"></div>
        <label for="duedate">Due by</label>
        <input id="duedate" name="duedate" type="date" value="{{item.duedate}}">
    </div>
    <div class="attribute"></div>
        <label for="importance">Importance</label>
        <input id="importance" type="number" name="importance" min="1" max="5" value="{{item.importance}}">
    </div>
    <div class="attribute"></div>
        <label><input id="finished" name="finished" type="checkbox" {{#if item.finished}}checked{{/if}}>Finished</label>
    </div>
    <button type="submit">save</button>
</form>
<form action="/" method="get">
    <button type="submit">cancel</button>
</form>